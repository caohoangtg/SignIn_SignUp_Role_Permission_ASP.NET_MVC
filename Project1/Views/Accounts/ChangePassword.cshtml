
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ChangePassword</h2>
<h3 class="text-success">@ViewBag.Message</h3>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Mật khẩu cũ:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line password" data-val="true" data-val-regex="Mật khâu không đúng định dạng" data-val-regex-pattern="^(?=.*[\d])(?=.*[a-z])[\w\d!#$%_]{6,40}$" data-val-required="Không được để trống" id="oldPassword" name="oldPassword" type="password" value="">
                @Html.ValidationMessage("oldPassword", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Mật khẩu mới:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line password" data-val="true" data-val-regex="Mật khâu không đúng định dạng" data-val-regex-pattern="^(?=.*[\d])(?=.*[a-z])[\w\d!#$%_]{6,40}$" data-val-required="Không được để trống" id="password" name="password" type="password" value="">
                @Html.ValidationMessage("password", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Xác nhận lại mật khẩu:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line password" data-val="true" data-val-regex="Mật khâu không đúng định dạng" data-val-regex-pattern="^(?=.*[\d])(?=.*[a-z])[\w\d!#$%_]{6,40}$" data-val-required="Không được để trống" id="rPassword" name="rPassword" type="password" value="">
                @Html.ValidationMessage("rPassword", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}