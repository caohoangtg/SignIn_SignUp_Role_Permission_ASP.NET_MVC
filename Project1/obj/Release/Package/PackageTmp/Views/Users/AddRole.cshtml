 
@{
    ViewBag.Title = "Add Role";
}

<h2>Add New Role</h2>

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <div class="col-md-2">
                <label>Username:</label>
            </div>
            <div class="col-md-10">
                @ViewBag.Username
                <input type="hidden" value="@ViewBag.UserId" name="userId" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label>Role:</label>
            </div>

            <div class="col-md-10">
                @Html.DropDownList("roleId", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<ul>
    @foreach (var item in ViewBag.LstRole)
            {
        <li>@item.Name <a href="@Url.Action("DeleteRoleInUser", "Users", new { userId = ViewBag.UserId, roleId = item.Id })">Delete</a></li>
    }
</ul> 