
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <hr />
                
        <div class="form-group">
            <div class="col-md-2">
                <label>Username:</label>
            </div>
            <div class="col-md-10">
                @ViewBag.RoleName
                <input type="hidden" value="@ViewBag.RoleId" name="userId" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label>Permission:</label>
            </div>
            
            <div class="col-md-10">
                @Html.DropDownList("permissionId", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<ul>
    @foreach (var item in ViewBag.LstPermission)
            {
        <li>@item.Name <a href="@Url.Action("DeletePermissionInRole","Roles", new { roleId = ViewBag.RoleId, permissionId = item.Id })">Delete</a></li>
    }
</ul>

<div class="onoffswitch">
    <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch" checked>
    <label class="onoffswitch-label" for="myonoffswitch">
        <span class="onoffswitch-inner"></span>
        <span class="onoffswitch-switch"></span>
    </label>
</div>